
doctype
html
  head
    title XMPP Chat
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css' rel='stylesheet')
    link(href='/css/main.css', rel='stylesheet')
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css")
    script(src='https://code.jquery.com/jquery-2.2.3.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    script(src="https://code.getmdl.io/1.1.3/material.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js")
    script(src='https://cdn.socket.io/socket.io-1.4.5.js')
  body
    #addModal.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal')
            h4.modal-title Add Contact
          .modal-body
            .input-group
              label(for="modal-contact") Contact
              input#modal-contact.form-control.border.no-shadow
          .modal-footer
            button.btn.btn-default#modal-add(type='button', data-dismiss='modal') Add
            button.btn.btn-default(type='button', data-dismiss='modal') Close

    #deleteModal.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal')
            h4.modal-title Delete Contact
          .modal-body
            .input-group
              label(for="modal-contact") Contact
              input#modal-delete-contact.form-control.border.no-shadow
          .modal-footer
            button.btn.btn-default#modal-delete(type='button', data-dismiss='modal') Delete
            button.btn.btn-default(type='button', data-dismiss='modal') Close

    #groupModal.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal')
            h4.modal-title New Group
          .modal-body
            .input-group
              label(for="modal-group") Group Name
              input#modal-group.form-control.border.no-shadow
            .input.group#contact-names
          .modal-footer
            button.btn.btn-default#btn-createGroup(type='button', data-dismiss='modal') Create
            button.btn.btn-default(type='button', data-dismiss='modal') Close

    #filterModal.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal')
            h4.modal-title Filtered Messages
          .modal-body#filtered-messages
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close

    #filterModalFiles.modal.fade(role='dialog')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal')
            h4.modal-title Files
          .modal-body#filtered-files
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close



    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header
        .mdl-layout__header-row
          span.mdl-layout-title Chat App
          .mdl-layout-spacer
          nav.mdl-navigation.mdl-layout--large-screen-only
            button#btn-logout.btn.btn-success.no-rounded Logout
            a.mdl-navigation__link(href='') Logged in as:
            a.mdl-navigation__link#username(href='') #{username}
            a.mdl-navigation__link(href='') Presence
            select#select-presence
              option(value="online") Online
              option(value="away") Away
              option(value="offline") Offline
      main.mdl-layout__content
        .page-content
          header
          .fluid-container
            block content
      footer#footer.mdl-mini-footer.hidden
            .mdl-mini-footer__left-section
              .mdl-logo Actions
              ul.mdl-mini-footer__link-list
                li
                  input#chat-input.form-control.border.no-shadow(placeholder='Type your message here')
                li
                  button#chat-btn.btn.btn-success.no-rounded(type='button', name='message') Send
                li
                  button.btn.btn-info(type='button', data-toggle='modal', data-target='#groupModal') Add Group
                li
                  button#fileUpload-btn.btn.btn-info(type='button') Send File
                li
                  input#fileUpload.file-loading(type='file')
                li
                  label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect(for='important-messages')
                    input#important-messages.mdl-checkbox__input(name="chk[]", type='checkbox', checked='')
                    span.mdl-checkbox__label Important Message
                li
                  button#important-btn.btn.btn-info(type='button') Important Messages
                li
                  button#files-btn.btn.btn-info(type='button') Files


    script(src="/js/app.js")


